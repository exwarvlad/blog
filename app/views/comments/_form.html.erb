<h4>Comments:</h4>

<div class="row">
  <div class="col-md-4">
    <%= form_for([*commentable, Comment.new], local: true, method: :post, remote: true) do |form| %>
      <div class="inner-addon left-addon buffer-bot-5">
        <span>
        <i class="glyphicon fas fa-user-ninja" aria-hidden="true"></i>
        </span>
        <%= form.text_field :author, class: 'author-width form-control', placeholder: t(:select_author) %>
      </div>

      <div class="field buffer-bot-5">
        <%= form.text_area :content, class: 'area-row form-control', placeholder: t(:area_description) %>
      </div>

      <div class="actions">
        <%= form.submit t(:send_comment), class: 'forumPostButton btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>