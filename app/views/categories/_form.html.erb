<%= form_for(@category, local: true, remote: edit_action?) do |form| %>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Category <%= modal_name %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="actions">
                <div class="form-group row">
                  <%= form.label :name, class: 'col-sm-3 col-form-label' %>
                  <div class="col-sm-9">
                    <%= form.text_field :name, class: 'form-control' %>
                  </div>
                </div>

                <div class="form-group row">
                  <%= form.label :description, class: 'col-sm-3 col-form-label' %>
                  <div class="col-sm-9">
                    <%= form.text_area :description, class: 'form-control', maxlength: Category::DESCRIPTION_MAX_SIZE %>
                  </div>
                </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= form.submit(class: 'btn btn-primary') %>
          </div>
        </div>
      </div>
    </div>
<% end %>